</head>
<body>
    <%- include('../partials/navbar.ejs') %>
    <h1>Settings</h1>
    <form action="/settings" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div>
            <input class="form-control" type="text" name="email" value="<%= currentUser.email %>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <% var i = 0 %>
    <% currentUser.friends.forEach( friend => { %>
        <% if(friend.status === "request received") { %>
      <%  i++; }%>
   <% }) %>

    <h3>Friend requests received: <%= i %></h3>
    
    <ul>
        <% currentUser.friends.forEach( friend => { %>
            <% if(friend.status === "request received") { %>
                <li>
                <%= friend.username %>
                <form action="/acceptFriendReq" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="acceptedFriendId" value="<%= friend.userId %>">
                    <button type="submit">Accept friend</button>
                </form>
            </li>
          <% }%>
       <% }) %>
    </ul>
</body>
