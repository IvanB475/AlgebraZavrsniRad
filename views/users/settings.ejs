<%- include('../partials/header.ejs') %>

</head>
<body>
    <%- include('../partials/navbar.ejs') %>
    <h1>Settings</h1>
    <form action="/settings" method="POST" enctype="multipart/form-data">
        <div>
            <input type="text" name="email" value="<%= currentUser.email %>">
        </div>
        <img src="/<%= currentUser.imageUrl %>" width= "100px" height="100px"></img>
        <label for="image">Image</label>
        <input type="file" name="image" id="image"> 
        </div>
        <div class="form-group">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <% var i = 0 %>
    <% currentUser.friends.forEach( friend => { %>
        <% if(friend.status === "request received") { %>
      <%  i++; }%>
   <% }) %>

    <h3>Friend requests received: <%= i %></h3>
    
    <ul>
        <% currentUser.friends.forEach( friend => { %>
            <% if(friend.status === "request received") { %>
                <li>
                <%= friend.username %>
                <form action="/acceptFriendReq" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="acceptedFriendId" value="<%= friend.userId %>">
                    <button type="submit">Accept friend</button>
                </form>
            </li>
          <% }%>
       <% }) %>
    </ul>
</body>
